<%- include("../includes/header.ejs", {title:"Add New School"}); %>

<h1>Add New School</h1>
<a href="/">Home</a> <br />
<form action="/school/insert" method="get">
    School Name: <input id="school_name" name="school_name" type="text" />
    <br />
    <br />
    Address
    <select id="address_id" name="address_id">
        <% for(var i=0; address.length > i; i++ ) { %>
        <option value="<%= address[i].address_id %>"><%= address[i].street + ', ' + address[i].zipcode %></option>
        <% } %>
    </select>
    <br />
    <input type="submit" />

</form>
<%- include("../includes/footer.ejs"); %>